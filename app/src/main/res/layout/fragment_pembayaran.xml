<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.peminjaman.PembayaranFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pembayaran"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="16dp"/>

        <!-- Reservation Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Peminjaman"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:layout_marginBottom="16dp"/>

                <!-- Facility Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fasilitas"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvNamaFasilitas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Gedung Olahraga"/>
                </LinearLayout>

                <!-- Rental Option -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Opsi Peminjaman"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvOpsiPeminjaman"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Diluar Jadwal Rutin"/>
                </LinearLayout>

                <!-- Event Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acara"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvEvent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Turnamen Badminton UII"/>
                </LinearLayout>

                <!-- Organization Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Organisasi"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvOrganisasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="UKM Badminton UII"/>
                </LinearLayout>

                <!-- Fields/Courts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lapangan"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvListLapangan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Lapangan Badminton 1, Lapangan Badminton 2"/>
                </LinearLayout>

                <!-- Date Range -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanggal"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDateStartEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="01/05/2025 - 03/05/2025"/>
                </LinearLayout>

                <!-- Time Range -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waktu"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvTimeStartEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="09:00 - 12:00"/>
                </LinearLayout>

                <!-- Special User Type (only for Facility ID 30) -->
                <LinearLayout
                    android:id="@+id/layoutPenggunaKhusus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengguna Khusus"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvPenggunaKhusus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Internal UII"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Payment Calculation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rincian Pembayaran"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:layout_marginBottom="16dp"/>

                <!-- Days Count -->
                <LinearLayout
                    android:id="@+id/layoutJumlahHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jumlah Hari"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvJumlahHari"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="3 hari"/>
                </LinearLayout>

                <!-- Voucher Discount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Voucher Diskon"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvVoucher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold"
                        tools:text="-10%"/>
                </LinearLayout>

                <!-- Calculation Details -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perhitungan:"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvPerhitungan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    tools:text="3 hari x Rp 200.000 = Rp 600.000\nDiskon 10% = Rp 60.000"/>

                <!-- Separator Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <!-- Total Payment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Bayar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"/>

                    <TextView
                        android:id="@+id/tvTotalBayar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_blue"
                        tools:text="Rp 540.000"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_batalkan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Batalkan"
                android:textAllCaps="false"
                android:backgroundTint="@color/red"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_bayar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Bayar Sekarang"
                android:textAllCaps="false"
                android:backgroundTint="@color/dark_blue"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>