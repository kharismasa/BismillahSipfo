<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.peminjaman.PeminjamanActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/form_pengajuan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jargon_peminjaman"
            android:gravity="center"
            android:padding="8dp" />

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_active"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:padding="6dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvStep1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengisi Form"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/tvStep1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Line between steps -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/gray" />

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/step2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_inactive"
                    android:text="2"
                    android:textColor="@color/gray"
                    android:padding="6dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvStep2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengisi Form"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/tvStep2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tata tertib"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <!-- Line between steps -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/gray" />

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/step3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_inactive"
                    android:text="3"
                    android:textColor="@color/gray"
                    android:padding="6dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvStep3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Melakukan"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/tvStep3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:name="com.example.bismillahsipfo.ui.fragment.peminjaman.FormPeminjamanFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>
