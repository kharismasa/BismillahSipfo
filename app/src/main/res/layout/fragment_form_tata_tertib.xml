<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.peminjaman.FormTataTertibFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengajuan Pinjam Fasilitas Olahraga"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pinjam fasilitas olahraga UII mudah dan cepat, langsung dari genggaman Anda!"
            android:gravity="center"
            android:padding="8dp" />

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_active"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:padding="6dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengisi Form"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Line between steps -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/blue" />

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_active"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:padding="6dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengisi Form"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tata tertib"
                    android:textSize="12sp"
                    android:textColor="@color/blue"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Line between steps -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/gray" />

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_inactive"
                    android:text="3"
                    android:textColor="@color/gray"
                    android:padding="6dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Melakukan"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Form Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Kesediaan Menaati Peraturan dan Tatatertib"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.  "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengguna/penyewa wajib menyelesaikan administrasi sebelum menggunakan fasilitas. Jika hingga H-3 administrasi belum diselesaikan, peminjaman dianggap membatalkan peminjaman, dan pengelola berhak memberikan izin penggunaan kepada pihak lain yang membutuhkan."
                android:paddingTop="8dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengguna/penyewa dilarang membawa senjata tajam, berkelahi, mengonsumsi atau membawa minuman keras, narkoba, dan obat-obatan terlarang lainnya."
            android:paddingTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengguna/penyewa dilarang merusak gedung dan fasilitas yang ada, mencoret-coret, merokok, atau membuang sampah sembarangan."
            android:paddingTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengguna/penyewa wajib menjaga keamanan dan ketertiban agar tidak terjadi kericuhan."
            android:paddingTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengguna/penyewa wajib menjaga sopan santun dalam berpakaian dan berperilaku."
            android:paddingTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apabila terjadi kehilangan atau kerusakan fasilitas, pengguna/penyewa bertanggung jawab untuk mengganti barang yang hilang atau rusak sesuai dengan kondisi aslinya."
            android:paddingTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengguna/penyewa dilarang memindahtangankan atau meminjamkan fasilitas kepada pihak lain tanpa seizin pengelola."
            android:paddingTop="8dp" />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kartu Identitas"
            android:paddingTop="10dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/container_kartu_identitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Gambar Kartu Identitas atau button akan ditambahkan secara dinamis dari kode Kotlin -->
        </LinearLayout>

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkbox_tata_tertib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya bersedia menaati peraturan dan tata tertib, jika tidak akan mendapat sanksi."
            android:paddingTop="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/button_batalkan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batalkan"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:backgroundTint="@color/gray"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>